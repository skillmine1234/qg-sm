/ - panel[0] << {title: 'Request', height: '170px', fields: [:reply, :status_code, :bank_ref_no, :rep_timestamp, :reconciled_at, :steps]}
/ - panel[1] << {title: 'Request Details', height: '300px', fields: [:req_version, :customer_id, :debit_account_no, :rmtr_account_no, :rmtr_account_ifsc, :transfer_type, :req_transfer_type]}
/ - panel[1] << {title: '', height: '300px', fields: [:transfer_ccy, :transfer_amount, :bene_account_no, :bene_account_ifsc, :cbs_req_ref_no, :rmtr_to_bene_note]}
/ - panel[2] << {title: 'Remitter Details', height: '400px', fields: [:rmtr_full_name, :rmtr_address1, :rmtr_address2, :rmtr_address3, :rmtr_postal_code, :rmtr_city, :rmtr_state, :rmtr_country, :rmtr_email_id, :rmtr_mobile_no]}
